void TIM8_BRK_TIM12_IRQHandler(void)
{
  if (TIM12->SR & TIM_SR_UIF) // if UIF flag is set
  {
    TIM12->SR &= ~TIM_SR_UIF; // clear UIF flag
    mcAX.vIrqHandlerTimStep();
  }
}

